{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AOI Wafer Stacking",
  "version": "1.0.3",
  "identifier": "com.aoi.wafer.stacking",

  "plugins": {
    "sql": {
      "default": ["sqlite"],
      "preload": [
        "sqlite:data.db"
      ],
      "sqlite": {
        "lib": "sqlite"
      }
    }
  },

  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:8001",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },

  "bundle": {
    "resources": {
      "assets": "assets"
    }
  },

  "app": {
    "windows": [
      {
        "title": "清纯AOI优化与叠图",
        "width": 1200,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  }
}
