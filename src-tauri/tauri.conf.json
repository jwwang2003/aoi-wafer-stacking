{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aoi-wafer-stacking",
  "version": "1.0.0",
  "identifier": "com.aoi-wafer-stacking",

  "plugins": {
    "sql": {
      "default": ["sqlite"],
      "preload": [
        "sqlite:data.db"
      ],
      "sqlite": {
        "lib": "sqlite"
      }
    }
  },

  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "清纯AOI优化与叠图",
        "width": 1200,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
